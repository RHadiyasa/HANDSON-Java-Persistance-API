<?xml version="1.0" encoding="UTF-8" ?>

<entity-mappings xmlns="http://java.sun.com/xml/ns/persistence/orm" version="2.0">
    <entity class="com.hadiyasa.example_jpa.entity.User">
        <table name="users"/>
        <attributes>
            <id name="id"/>
            <basic name="name">
                <column name="user_name"/>
            </basic>
            <basic name="balance">
                <column name="user_balance"/>
            </basic>
        </attributes>
    </entity>
</entity-mappings>