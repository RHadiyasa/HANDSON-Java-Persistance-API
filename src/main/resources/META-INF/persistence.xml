<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">

    <persistence-unit name="example_jpa">
<!--        <mapping-file>META-INF/user_mapping.xml</mapping-file>-->

        <!-- Menambahkan entity sebagai anotation -->
        <class>com.hadiyasa.example_jpa.entity.User</class>
        <class>com.hadiyasa.example_jpa.entity.UserProfile</class>

        <properties>
            <!-- Database Connection-->
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/rrsh"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="root"/>

            <!-- Hibernate = untuk munculin SQLnya -->
            <property name="hibernate.show_sql" value="true"/>

            <!-- Hibernate akan otomatis membuat tabel user_profile jika belum ada -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>
    </persistence-unit>
</persistence>